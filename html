        // 로컬스토리지에 저장
        localStorage.setItem("name", "김유신");
        localStorage.setItem("age", "15");

        // 로컬스토리지에서 가져오기
        let myName = localStorage.getItem("name");
        let myAge = localStorage.getItem("age");

    </script>
